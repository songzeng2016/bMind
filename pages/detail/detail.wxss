/* pages/detail/detail.wxss */

page {
  width: 100%;
  height: 100%;
}

.banner {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.banner .sale {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  padding: 8rpx 18rpx;
  border: 1px solid white;
  border-radius: 10rpx;
  color: white;
  font-size: 20rpx;
}

/* 价格和人数 */

.price-num {
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  height: 92rpx;
  background: #ede6d3;
  border-bottom: 1px solid #d7d7d7;
  color: #6f6f6f;
  font-size: 24rpx;
}

.price-wrapper {
  color: #92908e;
}

.price {
  color: #a7a17a;
  font-size: 34rpx;
}

/* 时间地点 */

.time-place {
  padding-left: 28rpx;
}

.time-place > view {
  height: 80rpx;
}

.time {
  border-bottom: 1px dotted #d6d6d6;
}

/* 列表 */

.list {
  padding: 24rpx 28rpx;
  border-top: 1px solid #d6d6d6;
}

.title {
  color: #343434;
  font-size: 26rpx;
  font-weight: 700;
}

.desc {
  color: #9e9e9e;
  font-size: 26rpx;
}

.button {
  width: 93%;
  margin: 50rpx auto;
  background: #c88e44;
  color: #fff;
}
